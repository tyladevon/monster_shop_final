<h1><%= @user.name %></h1>
<p><%= @user.email %></p>

<section class='addresses'>
    <% @user.addresses.each do |address| %>
      <li><%= address.nickname %></li>
      <li><%= address.name %></li>
      <li><%= address.address %>,</li>
      <li><%= address.city%>, <%= address.state %> <%= address.zip %></li>
      <li><%= link_to "Edit Address", edit_user_address_path(@user.id, address.id) %></li>
    <% end %>
</section>
